{
  "version": "0.0.1",
  "id": "testtemplate",
  "root": {
    "id": "root",
    "type": "grid",
    "direction": "row",
    "items": [
      {
        "id": "creative",
        "type": "image",
        "columns": 3,
        "srcKey": "mainimage"
      },
      {
        "id": "middle",
        "type": "grid-container",
        "direction": "column",
        "columns": 6,
        "items": [
          {
            "id": "title",
            "type": "text",
            "contentKey": "header",
            "style": {
              "color": "green"
            }
          },
          {
            "id": "subtitle",
            "type": "text",
            "contentKey": "subtitle"
          },
          {
            "id": "shortlink",
            "type": "text",
            "contentKey": "footer",
            "linkURLKey": "offerlink"
          }
        ]
      },
      {
        "id": "right",
        "columns": 3,
        "direction": "column",
        "type": "grid-container",
        "items": [
          {
            "id": "abovebutton",
            "type": "text",
            "contentKey": "price"
          },
          {
            "id": "offerbutton",
            "type": "text-button",
            "contentKey": "offerbutton"
          }
        ]
      }
    ]
  }
}
